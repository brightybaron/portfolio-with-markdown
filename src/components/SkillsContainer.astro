---
import { IconLaptop } from "@components/Icons";

const { skillsData } = Astro.props;
---

{
  skillsData.map((item: any) => (
    <div class="rounded-md border border-slate-200/75 bg-white px-4 py-2 shadow-sm">
      <h3 class="text-lg font-medium mb-3 text-center md:text-left flex items-center">
        {item.title}
      </h3>
      <div class="flex flex-wrap gap-2 justify-center md:justify-start">
        {item.skills.map((item: any) => (
          <div class="px-3 py-1 bg-slate-100/75 backdrop-blur-sm rounded-md text-sm border border-slate-500/10 shadow-sm hover:scale-105 hover:cursor-pointer transition-all duration-300 ">
            {item}
          </div>
        ))}
      </div>
    </div>
  ))
}
